<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/list_header_bg">

    <TextView
        android:id="@+id/local"
        android:layout_width="40dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:text="Local"/>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/local"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/left_boarder"/>

    <TextView
        android:id="@+id/today"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/local"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tomorrow"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="1dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="Today"/>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/today"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/left_boarder"/>

    <TextView
        android:id="@+id/tomorrow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/today"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="1dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="Tomorrow"/>

</androidx.constraintlayout.widget.ConstraintLayout>